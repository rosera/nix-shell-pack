layout {

   tab name="Ollama" focus=true {

     pane split_direction="vertical" {
       pane {
         name "Terminal"
       }

       pane split_direction="horizontal" {

         pane command="ollama" {
           name "Ollama Server"
           args "serve"
         }

         pane command="ollama" {
           name "Ollama Server"
           args "run" "llama3.2"
           start_suspended true
         }

       }

     }
   }

}
